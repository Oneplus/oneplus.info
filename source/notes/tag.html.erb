---
layout: page
pageable: true
per_page: 12
---

<h2>标签: '<%= tagname %>'</h2>
<hr />

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<div>
  <% page_articles('notes').each_with_index do |article, i| %>
 <div class="row">
   <div class="col-md-1"><h2><small><%= article.date.strftime('%b %e') %></small></h2></div>
   <div class="col-md-11"><h2><%= link_to article.title, article %></h2></div>
 </div>
 <% end %>
</div>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
