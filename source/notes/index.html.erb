---
title: Technique Notes
layout: page
---
<% blog("notes").articles.each_with_index do |article, i| %>
<div class="row">
  <div class="col-md-1">
    <h2 class="pull-right"><%= article.date.strftime('%e') %><br />
    <small><%= article.date.strftime('%b') %></small></h2>
  </div>
  <div class="col-md-11">
    <h2><%= link_to article.title, article %></h2>
    <% if not article.tags.nil? %>
      <% article.tags.each do |tag| %>
        [<%= link_to tag, tag_path(tag, 'notes') %>]
      <% end %>
    <% end %>
  </div>
  <hr />
</div>
<% end %>
