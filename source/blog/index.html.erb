---
title: Blog
layout: page
pageable: true
per_page: 10
---
<% page_articles.each_with_index do |article, i| %>
<div class="row">
 <div class="col-md-1">
    <h2 class="pull-right"><%= article.date.strftime('%e') %><br />
    <small><%= article.date.strftime('%b') %></small></h2>
  </div>
  <div class="col-md-11">
    <h2><%= link_to article.title, article %></h2>
    <%= article.summary(250) %>
    <%= link_to "[READ MORE]", article %>
  </div>
  <hr />
</div>
<% end %>

<div class="row text-center">
  <% if paginate %>
    <div class="col-md-12">
      <hr />
      <% if prev_page %>
        <%= link_to 'Previous', prev_page %>
      <% end %>
      <% if num_pages > 1 %>
         <%= page_number %> / <%= num_pages %>
    <% end %>
    <% if next_page %>
      <%= link_to 'Next', next_page %>
    <% end %>
  </div>
<% end %>
</div>
